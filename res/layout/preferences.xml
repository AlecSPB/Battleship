<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"

        android:columnCount="9"
        >

    <TextView
            android:text="Player Data:"
            android:textSize="32dip"
            android:layout_columnSpan="4"
            android:layout_gravity="center_horizontal"
            />

    <TextView
            android:text="Avatar:"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#feff47"/>

    <EditText
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:id="@+id/editTexttAvatar"
            />

    <TextView
            android:text="First Name:"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#feff47"/>

    <EditText
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:id="@+id/editTextFirst"
            />

    <TextView
            android:text="Last Name:"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#feff47"/>

    <EditText
            android:ems="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="5"
            android:id="@+id/editTextLast"
            />

    <TextView
            android:text="Email:"
            android:layout_columnSpan="1"
            android:layout_column="0"
            android:layout_gravity="right"
            android:textColor="#feff47"/>

    <EditText
            android:layout_columnSpan="5"
            android:ems="10"
            android:id="@+id/editTextEmail"
            />

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="8"
            android:columnCount="7"
            android:layout_margin="20dp"
            >

        <TextView
                android:text="XP: "
                android:layout_columnSpan="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="0"
                android:layout_marginRight="10dp"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_gravity="left"
                android:id="@+id/textViewXP"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_marginRight="30dp"
                />

        <TextView
                android:text="Level: "
                android:layout_columnSpan="1"
                android:layout_column="2"
                android:layout_gravity="right"
                android:layout_row="0"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="3"
                android:layout_gravity="left"
                android:id="@+id/textViewLevel"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:layout_row="0"
                />

        <TextView
                android:text="Coins: "
                android:layout_columnSpan="1"
                android:layout_column="4"
                android:layout_gravity="right"
                android:layout_row="0"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="5"
                android:layout_gravity="left"
                android:id="@+id/textViewCoins"
                android:textColor="#ff3423"
                android:numeric="integer"
                android:textStyle="bold"
                android:layout_row="0"
                />

        <TextView
                android:text="Online: "
                android:layout_columnSpan="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="1"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_gravity="left"
                android:id="@+id/textViewOnline"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="1"
                />

        <TextView
                android:text="Available: "
                android:layout_columnSpan="1"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="1"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="3"
                android:layout_gravity="left"
                android:id="@+id/textViewAvailable"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="1"
                />

        <TextView
                android:text="Gaming: "
                android:layout_columnSpan="1"
                android:layout_column="4"
                android:layout_gravity="right"
                android:layout_row="1"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="5"
                android:layout_gravity="left"
                android:id="@+id/textViewGaming"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="1"
                />

        <TextView
                android:text="Won: "
                android:layout_columnSpan="1"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_row="2"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_gravity="left"
                android:id="@+id/textViewWon"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="2"
                />

        <TextView
                android:text="Lost: "
                android:layout_columnSpan="1"
                android:layout_column="2"
                android:layout_gravity="right"
                android:layout_row="2"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="3"
                android:layout_gravity="left"
                android:id="@+id/textViewLost"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="2"
                />

        <TextView
                android:text="Tied: "
                android:layout_columnSpan="1"
                android:layout_column="4"
                android:layout_gravity="right"
                android:layout_row="2"
                />

        <TextView
                android:text="0"
                android:layout_columnSpan="1"
                android:layout_column="5"
                android:layout_gravity="left"
                android:id="@+id/textViewTied"
                android:textColor="#ff3423"
                android:textStyle="bold"
                android:layout_row="2"
                />

    </GridLayout>

</GridLayout>